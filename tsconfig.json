{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "outDir": ".dist",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
